generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model User {
  id        Int      @id @default(autoincrement())
  fullname  String
  mobile    String
  email     String   @unique
  password  String?
  otp       String?
  otpExpiry DateTime?
  createdAt DateTime @default(now())
}

model Episode {
  id            String     @id @default(cuid())
  title       String
  description String
  audioFile   String?   // filename if uploaded
  createdAt   DateTime @default(now())
}